{
  "name": "signalk-openmeteo",
  "version": "0.1.0-beta.1",
  "description": "SignalK plugin for position-based weather and marine forecast data from Open-Meteo API. Compliant with the SignalK Weather API.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "postinstall": "echo 'Building TypeScript...' && npm run build",
    "dev": "npm run build && npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts *.json --ignore-unknown",
    "format:check": "prettier --check src/**/*.ts *.json --ignore-unknown",
    "ci": "npm run format:check && npm run lint"
  },
  "keywords": [
    "signalk-node-server-plugin",
    "signalk-category-weather",
    "signalk-category-instruments",
    "signalk-open-meteo",
    "open-meteo",
    "weather",
    "forecast",
    "marine",
    "signalk",
    "typescript",
    "position-based",
    "marine weather",
    "nautical weather"
  ],
  "author": "Maurice Tamman",
  "license": "MIT",
  "dependencies": {
    "@signalk/server-api": "^2.7.1",
    "@types/node": "^20.5.0",
    "@types/node-fetch": "^2.6.4",
    "typescript": "^5.1.6",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/motamman/signalk-open-meteo.git"
  },
  "signalk": {
    "appSupport": "none",
    "compatibility": ">=2.16.0",
    "displayName": "SignalK Open-Meteo Weather"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "tsconfig.json",
    "README.md"
  ]
}
